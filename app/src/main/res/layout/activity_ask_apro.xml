<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mothupii_.project77.AskAPro">

    <ScrollView
        android:layout_width="361dp"
        android:layout_height="492dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/oneOn1Tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="One One 10Min R10"
                android:textAlignment="center"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="130dp"
                tools:layout_editor_absoluteY="293dp" />


            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/background_light"
                android:backgroundTint="@android:color/background_light"
                android:onClick="onClickBtn"
                app:srcCompat="@drawable/tutor"
                tools:ignore="ContentDescription,UnusedAttribute" />

            <TextView
                android:id="@+id/askExpTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ask an Expect for R5"
                android:textAlignment="center"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="105dp"
                tools:layout_editor_absoluteY="39dp"
                tools:ignore="HardcodedText" />

            <ImageButton
                android:id="@+id/expertBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light"
                android:backgroundTint="@android:color/background_light"
                android:onClick="onClick7"
                app:srcCompat="@drawable/inspire"
                tools:layout_editor_absoluteX="43dp"
                tools:layout_editor_absoluteY="56dp" />

            <TextView
                android:id="@+id/poolL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pool Learning"
                android:textAlignment="center"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <ImageButton
                android:id="@+id/imageButton11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick9"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/education"
                tools:ignore="ContentDescription" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
