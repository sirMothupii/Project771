<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mothupii_.project77.Mentorship">

    <EditText
        android:id="@+id/editText"
        android:layout_width="276dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Ask A Question..."
        android:inputType="textPersonName"
        tools:ignore="MissingConstraints"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.033"
        app:layout_constraintHorizontal_bias="0.164" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="70dp"
        android:layout_height="41dp"
        android:background="@drawable/button_background"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.033"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/proffHelpBtn"
        android:layout_width="282dp"
        android:layout_height="173dp"
        app:srcCompat="@drawable/social_entr"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="7dp"
        app:layout_constraintHorizontal_bias="0.732"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/proffHelpTxt"
        android:layout_width="243dp"
        android:layout_height="40dp"
        android:text="Get Proffesional Help"
        android:textAlignment="center"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/proffHelpBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <WebView
        android:id="@+id/loadAnsWeb"
        android:layout_width="277dp"
        android:layout_height="189dp"
        android:visibility="visible"
        android:layout_marginLeft="66dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintBottom_toTopOf="@+id/proffHelpTxt"
        android:layout_marginStart="66dp"
        android:layout_marginEnd="8dp" />

</android.support.constraint.ConstraintLayout>
